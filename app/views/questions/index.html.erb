<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<ul class="list-group">

    <% @questions.each do |question| %>
      <button type="button" class="list-group-item" onclick="location.href='<%=question_path(question) %>'">
        <span class="badge">14</span>
        <%= link_to question.title, question_path(question), :class => 'h2' %></br>
        <hr>
        <%= qiita_markdown(question.content) %>
        <%= time_ago_in_words(question.created_at) %>
      </button>
    <% end %>
</ul>

<nav aria-label="...">
  <ul class="pager">
    <li class="previous disabled"><a href="#"><span aria-hidden="true">&larr;</span> Older</a></li>
    <li class="next"><a href="questions?search=<%=params[:search]%>"> Newer <span aria-hidden="true">&rarr;</span></a></li>
  </ul>
</nav>
